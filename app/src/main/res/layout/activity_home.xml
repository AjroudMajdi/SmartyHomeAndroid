<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="@color/Text2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView7"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Welcome ,"
                android:textColor="@color/Text1"
                android:textSize="30dp" />
            <TextView
                android:id="@+id/name"
                android:layout_width="297dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/Text1"
                android:textSize="30dp" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/relativelayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
            <ImageView
                android:layout_marginLeft="35dp"
                android:id="@+id/test_image"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/living" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/test_image"
                    android:text="Living Room"
                    android:layout_marginTop="100dp"
                    android:textSize="18dp"
                    android:textColor="@color/cardview_light_background" />
                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/test_image"
                    android:layout_alignBottom="@id/test_image"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="4 Devices"
                    android:textColor="@color/cardview_light_background" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativelayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
            <ImageView
                android:layout_marginLeft="35dp"
                android:id="@+id/test_image1"
                android:layout_marginTop="15dp"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"

                android:src="@drawable/media" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/test_image1"
                    android:text="Media Room"
                    android:layout_marginTop="110dp"

                    android:textSize="18dp"
                    android:textColor="@color/cardview_light_background" />
                <TextView
                    android:id="@+id/myImageViewText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/test_image1"
                    android:layout_alignBottom="@id/test_image1"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="6 Devices"
                    android:textColor="@color/cardview_light_background" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativelayout2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
            <ImageView
                android:layout_marginLeft="35dp"
                android:id="@+id/test_image2"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_marginTop="15dp"
                android:src="@drawable/bath" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/test_image2"
                    android:text="Bathroom"
                    android:layout_marginTop="110dp"

                    android:textSize="18dp"
                    android:textColor="@color/cardview_light_background" />
                <TextView
                    android:id="@+id/myImageViewText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/test_image2"
                    android:layout_alignBottom="@id/test_image2"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="1 Device"
                    android:textColor="@color/cardview_light_background" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativelayout3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
            <ImageView
                android:layout_marginLeft="35dp"
                android:id="@+id/test_image3"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_marginTop="15dp"
                android:src="@drawable/bed"

                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/test_image3"
                    android:text="Bedroom"
                    android:layout_marginTop="110dp"

                    android:textSize="18dp"
                    android:textColor="@color/cardview_light_background" />
                <TextView
                    android:id="@+id/myImageViewText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/test_image3"
                    android:layout_alignBottom="@id/test_image3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="3 Devices"
                    android:textColor="@color/cardview_light_background" /></RelativeLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>